<%= form_with url: "/instructors/#{@instructor.id}/students", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br/>
  <%= form.label :age %>
  <%= form.number_field :age %><br/>
  <%= form.label :subject %>
  <%= form.text_field :subject %><br/>
  <%= form.label :level %>
  <%= form.text_field :level %><br/>
  <%= form.label :returning_student %>
  <%= form.check_box :returning_student %><br/>

  <%= form.submit "Create Student for Instructor #{@instructor.name}" %>
<% end %>